{
  "name": "arctic-tracker-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Arctic Tracker API with CITES and species data management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "test": "node test-connection.js",
    "install-server": "./install.sh",
    "setup": "npm install && npm run build && npm run test"
  },
  "bin": {
    "arctic-tracker-mcp": "dist/index.js"
  },
  "keywords": [
    "mcp",
    "arctic",
    "cites",
    "species",
    "conservation",
    "supabase"
  ],
  "author": "Arctic Tracker Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@supabase/supabase-js": "^2.38.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2"
  }
}
