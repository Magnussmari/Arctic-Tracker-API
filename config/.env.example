# Arctic Tracker API Environment Configuration
# Copy this file to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Optional: IUCN Red List API (if rebuilding assessments)
IUCN_API_TOKEN=your-iucn-api-token-here

# Database Connection (optional, for direct PostgreSQL access)
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Data Processing
BATCH_SIZE=1000  # Records per batch for bulk operations
MAX_WORKERS=4    # Parallel processing threads

# File Paths (optional overrides)
# CITES_DATA_PATH=/path/to/cites/data
# SPECIES_LIST_PATH=/path/to/species/list.csv